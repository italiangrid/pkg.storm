#DOCKER_ARGS="--cap-add SYS_PTRACE"
#DOCKER_ARGS="-v ${HOME}/git/pkg.storm:/code/pkg.storm:ro -v ${HOME}/git/storm-frontend:/code/storm-frontend:ro --cap-add SYS_PTRACE"

